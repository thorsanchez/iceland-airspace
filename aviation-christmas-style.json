{
  "version": 8,
  "name": "Aviation-Christmas-Map",
  "metadata": {
    "mapbox:type": "template"
  },
  "sources": {
    "mapbox": {
      "type": "vector",
      "url": "mapbox://mapbox.mapbox-streets-v8"
    },
    "airports": {
      "type": "geojson",
      "data": {
        "type": "FeatureCollection",
        "features": [
          {
            "type": "Feature",
            "properties": { "name": "Keflavik (KEF)" },
            "geometry": {
              "type": "Point",
              "coordinates": [-22.6056, 63.985]
            }
          },
          {
            "type": "Feature",
            "properties": { "name": "Reykjavik (RKV)" },
            "geometry": {
              "type": "Point",
              "coordinates": [-21.9406, 64.13]
            }
          }
        ]
      }
    },
    "airspaces": {
      "type": "geojson",
      "data": {
        "type": "FeatureCollection",
        "features": [
          {
            "type": "Feature",
            "properties": { "class": "CTR" },
            "geometry": {
              "type": "Polygon",
              "coordinates": [
                [
                  [-22.0, 63.9],
                  [-22.0, 64.2],
                  [-21.6, 64.2],
                  [-21.6, 63.9],
                  [-22.0, 63.9]
                ]
              ]
            }
          }
        ]
      }
    },
    "snow": {
      "type": "image",
      "url": "https://i.imgur.com/WKf1jvA.png",
      "coordinates": [
        [-180, 85],
        [180, 85],
        [180, -85],
        [-180, -85]
      ]
    }
  },
  "sprite": "mapbox://sprites/mapbox/bright-v9",
  "glyphs": "mapbox://fonts/mapbox/{fontstack}/{range}.pbf",

  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#d9e8ff"
      }
    },

    {
      "id": "water",
      "type": "fill",
      "source": "mapbox",
      "source-layer": "water",
      "paint": {
        "fill-color": "#99c9ff"
      }
    },

    {
      "id": "landcover",
      "type": "fill",
      "source": "mapbox",
      "source-layer": "landcover",
      "paint": {
        "fill-color": "#c8f5c1"
      }
    },

    {
      "id": "roads",
      "type": "line",
      "source": "mapbox",
      "source-layer": "road",
      "paint": {
        "line-color": "#ff4d4d",
        "line-width": 1.2
      }
    },

    {
      "id": "buildings",
      "type": "fill-extrusion",
      "source": "mapbox",
      "source-layer": "building",
      "paint": {
        "fill-extrusion-color": "#f6f1e4",
        "fill-extrusion-height": [
          "coalesce",
          ["get", "height"],
          5
        ],
        "fill-extrusion-opacity": 0.9
      }
    },

    {
      "id": "airspaces-fill",
      "type": "fill",
      "source": "airspaces",
      "paint": {
        "fill-color": [
          "match",
          ["get", "class"],
          "CTR", "#ff0000",
          "TMA", "#ff8800",
          "#ffffff"
        ],
        "fill-opacity": 0.25
      }
    },

    {
      "id": "airspaces-outline",
      "type": "line",
      "source": "airspaces",
      "paint": {
        "line-color": "#ff0000",
        "line-width": 2
      }
    },

    {
      "id": "airports",
      "type": "symbol",
      "source": "airports",
      "layout": {
        "icon-image": "airport_15",
        "icon-size": 1.3,
        "text-field": ["get", "name"],
        "text-size": 12,
        "text-offset": [0, 1.2]
      },
      "paint": {
        "text-color": "#ffffff",
        "text-halo-color": "#000000",
        "text-halo-width": 1.5
      }
    },

    {
      "id": "snow-layer",
      "type": "raster",
      "source": "snow",
      "paint": {
        "raster-opacity": 0.22
      }
    }
  ]
}
